<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Screen -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.WhatToEat" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- SearchView -->
        <item name="android:textCursorDrawable">@drawable/bg_cursor_search_view</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/white</item>

        <item name="icon">@color/black</item>
        <item name="background">@color/white</item>
    </style>

    <!-- ShapeAbleImageView -->
    <style name="Widget.ShapeableImageView.RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>